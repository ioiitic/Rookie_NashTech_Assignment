<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - R2EShop.App</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/R2EShop.App.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="container mx-auto bg-white border-gray-200">
            <div class="max-w-screen-2xl flex flex-wrap items-center justify-between mx-auto">
                <a href="#" class="flex items-center space-x-3">
                    <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap">Flowbite</span>
                </a>

                <div id="mega-menu-full" class="items-center justify-between">
                    <ul class="flex space-x-3">
                        <li>
                            <button class="flex p-4 items-center justify-between w-full text-gray-900 rounded cursor-default">
                                Home
                            </button>
                        </li>
                        <li id="mega-menu-full-dropdown-button">
                            <button class="flex p-4 items-center justify-between w-full text-gray-900 rounded cursor-default">
                                Product
                            </button>
                            <div id="mega-menu-full-dropdown" class="absolute hidden bg-white w-full top-100 left-0 border-t border-gray-200 shadow-md">
                                <div class="grid grid-cols-4 divide-x divide-gray-100 max-w-screen-xl p-2 mx-auto text-gray-900">
                                    <ul class="p-3">
                                        <li>
                                            Apple
                                        </li>
                                        <li>
                                            Samsung
                                        </li>
                                        <li>
                                            Google
                                        </li>
                                    </ul>
                                    <ul class="col-span-3 p-3">
                                        <li>
                                            <div class="grid grid-cols-4">
                                                <ul>
                                                    <li>
                                                        Iphone
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                </ul>
                                                <ul>
                                                    <li>
                                                        Iphone
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                    <li>
                                                        Iphone 15
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li>
                            <button class="flex p-4 items-center justify-between w-full text-gray-900 rounded cursor-default">
                                Device
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="flex text-center items-center justify-between space-x-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search"><circle cx="11" cy="11" r="8" /><path d="m21 21-4.3-4.3" /></svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shopping-cart"><circle cx="8" cy="21" r="1" /><circle cx="19" cy="21" r="1" /><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" /></svg>
                    <div id="navbar-user" class="relative bg-white">
                        <button type="button" class="flex text-sm bg-gray-800 rounded-full" 
                        id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
                            <img class="w-8 h-8 rounded-full" src="/docs/images/people/profile-picture-3.jpg" alt="user photo">
                        </button>      
                        <div class="absolute right-0 bg-white divide-y divide-gray-100 rounded-lg shadow hidden" id="user-dropdown">
                            <div class="px-4 py-3">
                                <span class="block text-sm text-gray-900">Bonnie Green</span>
                                <span class="block text-sm  text-gray-500 truncate">name@flowbite.com</span>
                            </div>
                            <ul class="py-2" aria-labelledby="user-menu-button">
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-950 hover:bg-gray-100">Dashboard</a>
                                </li>
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Settings</a>
                                </li>
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Earnings</a>
                                </li>
                                <li>
                                    <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sign out</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script>
        let userMenuOpen = false;
        const userMenu = document.getElementById('navbar-user');
        const userDropdown = document.getElementById('user-dropdown');

        const button = document.getElementById('mega-menu-full-dropdown-button');
        const hoverDiv = document.getElementById('mega-menu-full-dropdown');

        //userMenu.addEventListener('click', () => {
        //    userMenuOpen = !userMenuOpen;
        //    if (userMenuOpen) {
        //        userDropdown.classList.remove('hidden');
        //    } else {
        //        userDropdown.classList.add('hidden');
        //    }
        //});

        userMenu.addEventListener('mouseenter', () => {
            userDropdown.classList.remove('hidden');
        });

        userMenu.addEventListener('mouseleave', () => {
            userDropdown.classList.add('hidden');
        });

        userDropdown.addEventListener('mouseenter', () => {
            userDropdown.classList.remove('hidden');
        });

        button.addEventListener('mouseenter', () => {
            hoverDiv.classList.remove('hidden');
        });

        button.addEventListener('mouseleave', () => {
            hoverDiv.classList.add('hidden');
        });

        hoverDiv.addEventListener('mouseenter', () => {
            hoverDiv.classList.remove('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>